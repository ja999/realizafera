.container
  = simple_form_for production, html: { class: 'form-horizontal' } do |f|
    .row
      .col-lg-12
        = f.input :start_day, collection: FreeSpot::DAYS, prompt: 'Wybierz dzień...'
    .row
      .col-lg-12
        = f.input :start_hour, collection: 0..23
    .row
      .col-lg-12
        = f.input :start_minute, collection: 0..59
    .row
      .col-lg-12
        = f.input :end_day, collection: FreeSpot::DAYS, prompt: 'Wybierz dzień...'
    .row
      .col-lg-12
        = f.input :end_hour, collection: 0..23
    .row
      .col-lg-12
        = f.input :end_minute, collection: 0..59
    .row
      .col-lg-12
        = f.submit 'Save', class: 'btn btn-default'
